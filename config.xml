<?xml 
    version='1.0' 
    encoding='utf-8'?>
<widget 
    id="com.iidv.apoio.cointer-2019" 
    version="1.3.5" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:gap="https://phonegap.com/ns/1.0"
    xmlns:android = "http://schemas.android.com/apk/res/android">

    <name>IIDV COINTER 2019</name>

    <description>
        Aplicativo de apoio, utilizado durante os Congressos Internacionais de 2019 como forma de informatizar dados relacionados à envio de notas, presença de congressista e acompanhamento de trabalhos.
    </description>

    <author href="cti.institutoidv.org" email="cti@institutoidv.org">
        Coordenação de Tecnologia da Informação do Instituto Internacional Despertando Vocações
    </author>
    
    <platform name="android">
        <icon density="ldpi" src="platforms/android/res/drawable/icon.png" />
        <icon density="mdpi" src="platforms/android/res/drawable/icon.png" />
        <icon density="hdpi" src="platforms/android/res/drawable/icon.png" />
        <icon density="xhdpi" src="platforms/android/res/drawable/icon.png" />
        <icon density="xxhdpi" src="platforms/android/res/drawable/icon.png" />
        <icon density="xxxhdpi" src="platforms/android/res/drawable/icon.png" />
    </platform>
 
    <platform name="android">
        <splash src="platforms/android/res/drawable/splash.png" density="land-hdpi"/>
        <splash src="platforms/android/res/drawable/splash.png" density="land-ldpi"/>
        <splash src="platforms/android/res/drawable/splash.png" density="land-mdpi"/>
        <splash src="platforms/android/res/drawable/splash.png" density="land-xhdpi"/>

        <splash src="platforms/android/res/drawable/splash.png" density="port-hdpi"/>
        <splash src="platforms/android/res/drawable/splash.png" density="port-ldpi"/>
        <splash src="platforms/android/res/drawable/splash.png" density="port-mdpi"/>
        <splash src="platforms/android/res/drawable/splash.png" density="port-xhdpi"/>
    </platform>

    <preference name="android-targetSdkVersion" value="26"/>
    <preference name='phonegap-version' value='cli-8.0.0' />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />

    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="750"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="stay-in-webview" value="false" />
    <preference name="HeaderColor" value="#130e72" />

    <plugin name="cordova-plugin-inappbrowser" souce="npm" />
    <plugin name="cordova-plugin-headercolor" souce="npm" />
    <plugin name="cordova-plugin-whitelist" source="npm" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <icon src="platforms/android/res/drawable/icon.png" width="512" height="512" />
    <splash src="platforms/android/res/drawable/splash.png" /> 
    
    <allow-navigation href="*" />

    <config-file platform="android" parent="/manifest" mode="merge">
        <application android:theme="@android:style/Theme.Translucent.NoTitleBar"></application>
    </config-file>
</widget>